@using EntityLayer.Concrate;
@model List<MyProject>

<div class="tech-btm">

    <h4>Project Categories</h4>

    @foreach (var item in Model)
    {
        <div class="blog-grids row mb-3">
            <div class="col-md-5 blog-grid-left">
                <a href="/MyProject/GetMyProjectById/@item.Id">
                    <img src="@item.Image" class="img-fluid" alt=""
                     style="object-fit:fill;
                                        width:150px;
                                        height:100px;
                                        border: solid 1px #CCC">
                </a>
            </div>
            <div class="col-md-7 blog-grid-right">
                <div class="sub-meta">
                    <span>
                        <i class="fas fa-eye"></i> @item.ProjectCategory.Name
                    </span>
                </div>
                <br />
                <h5>
                    <a href="/MyProject/GetMyProjectById/@item.Id">@item.Name </a>
                </h5>
                <div class="sub-meta">
                    <span>
                        <i class="far fa-clock"></i> @item.CreatedDate.ToString().Substring(0,10)
                    </span>

                </div>
            </div>
        </div>
    }
</div>